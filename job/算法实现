#include <stdlib.h>
#include <stdio.h>
#include <stdint.h>

/*
*二叉查找算法
*/
int binary_search(int *array, int data, int len)
{
	int left = 0;
	int right = len - 1;
	int mid;
	while(left <= right)
	{
		mid = (right + left) / 2;
		if (data < array[mid])
		{
			right = mid - 1;
		}
		else if (data > array[mid])
		{
			left = mid + 1;
		}
		else
		{
			return mid;
		}
	}
	return -1;
}
